{
	"name": "wallust-theme",
	"displayName": "Wallust Theme",
	"description": "A theme generated with wallust color palette",
	"publisher": "saatvik333",
	"author": "Saatvik Sharma",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/saatvik333/vscode-wallust-theme"
	},
	"bugs": {
		"url": "https://github.com/saatvik333/vscode-wallust-theme/issues"
	},
	"homepage": "https://github.com/saatvik333/vscode-wallust-theme#readme",
	"engines": {
		"vscode": "^1.34.0"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"categories": [
		"Themes"
	],
	"keywords": [
		"theme",
		"wallust"
	],
	"icon": "icon.png",
	"activationEvents": [
		"*",
		"onCommand:wallustTheme.update"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "wallustTheme.update",
				"title": "Update",
				"category": "Wallust Theme"
			}
		],
		"configuration": {
			"title": "Wallust Theme",
			"properties": {
				"wallustTheme.autoUpdate": {
					"type": "boolean",
					"default": true,
					"description": "Update automatically the theme when the wallust color palette changes"
				}
			}
		},
		"themes": [
			{
				"label": "Wallust",
				"uiTheme": "vs-dark",
				"path": "./themes/wallust.json",
				"_watch": true
			},
			{
				"label": "Wallust Bordered",
				"uiTheme": "vs-dark",
				"path": "./themes/wallust-bordered.json",
				"_watch": true
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/color": "^3.0.2",
		"@types/glob": "^7.1.4",
		"@types/node": "^13.13.52",
		"@types/vscode": "^1.34.0",
		"@typescript-eslint/eslint-plugin": "^4.28.3",
		"@typescript-eslint/parser": "^4.28.3",
		"eslint": "^7.30.0",
		"glob": "^7.1.7",
		"typescript": "^3.9.10"
	},
	"dependencies": {
		"chokidar": "^3.5.2",
		"color": "^3.1.3"
	}
}
